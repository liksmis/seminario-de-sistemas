@model hotel2012.Models.reserva

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>reserva</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.fecha_inicio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fecha_inicio)
            @Html.ValidationMessageFor(model => model.fecha_inicio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fecha_fin)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fecha_fin)
            @Html.ValidationMessageFor(model => model.fecha_fin)
        </div>

         <div class="editor-field">
            
            @Html.DropDownList("codigo_habitacion",new SelectList(ViewBag.dato,"codigo_habitacion","numero"))
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
